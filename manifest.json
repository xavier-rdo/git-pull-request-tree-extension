{
    "manifest_version": 2,
    "name":    "Github Pull Request Tree View",
    "version": "0.0",
    "offline_enabled": true,
    "description": "This extension displays the list of changed files in a Github pull request as a tree view",

    "background": {
        "persistent": false,
        "scripts": ["background.js"]
    },

    "content_scripts": [{
        "matches":    ["https://github.com/*"],
        "js":         ["content.js"],
        "run_at":     "document_idle",
        "all_frames": false
    }],

    "page_action": {
        "default_title": "Pull Request - Tree View",
        "default_icon": {
            "19": "images/icon_treeview.png"
        },
        "default_popup": "popup.html"
    }
}
